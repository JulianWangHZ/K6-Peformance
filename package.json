{
  "name": "k6-conduit-performance-testing",
  "version": "1.0.0",
  "description": "K6 Performance Testing - Conduit Open Source Discussion Platform",
  "main": "index.js",
  "scripts": {
    "test:load": "k6 run test_scripts/conduit_load_test.js",
    "test:spike": "k6 run test_scripts/conduit_spike_test.js",
    "test:stress": "k6 run test_scripts/conduit_stress_test.js",
    "test:all": "npm run test:load && npm run test:spike && npm run test:stress",
    "test:load:dev": "k6 run --env ENV=dev test_scripts/conduit_load_test.js",
    "test:load:stage": "k6 run --env ENV=stage test_scripts/conduit_load_test.js",
    "test:spike:dev": "k6 run --env ENV=dev test_scripts/conduit_spike_test.js",
    "test:spike:stage": "k6 run --env ENV=stage test_scripts/conduit_spike_test.js",
    "test:stress:dev": "k6 run --env ENV=dev test_scripts/conduit_stress_test.js",
    "test:stress:stage": "k6 run --env ENV=stage test_scripts/conduit_stress_test.js",
    "test:all:dev": "npm run test:load:dev && npm run test:spike:dev && npm run test:stress:dev",
    "test:all:stage": "npm run test:load:stage && npm run test:spike:stage && npm run test:stress:stage",
    "test:load:env": "export $(cat .env.local | xargs) && k6 run test_scripts/conduit_load_test.js",
    "test:spike:env": "export $(cat .env.local | xargs) && k6 run test_scripts/conduit_spike_test.js",
    "test:stress:env": "export $(cat .env.local | xargs) && k6 run test_scripts/conduit_stress_test.js",
    "test:all:env": "npm run test:load:env && npm run test:spike:env && npm run test:stress:env",
    "lint": "eslint test_scripts/*.js config/*.js",
    "lint:fix": "eslint test_scripts/*.js config/*.js --fix",
    "validate": "k6 check test_scripts/conduit_load_test.js && k6 check test_scripts/conduit_spike_test.js && k6 check test_scripts/conduit_stress_test.js"
  },
  "keywords": [
    "k6",
    "performance-testing",
    "load-testing",
    "stress-testing",
    "spike-testing",
    "conduit",
    "realworld",
    "api-testing",
    "javascript"
  ],
  "author": "Julian Wang",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "k6": {
    "version": ">=0.40.0"
  }
}
